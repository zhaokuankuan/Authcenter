<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iemp.auth.authcenter.dao.UserDao">

    <resultMap id="User" type="com.iemp.auth.authcenter.domain.User" >
        <result column="id" property="id" />
        <result column="login_name" property="loginName" />
        <result column="real_name" property="realName" />
        <result column="password" property="password" />
    </resultMap>

    <sql id="Base_Column_List">
        `id`,
        `login_name`,
        `real_name`,
        `password`
    </sql>

    <insert id="insert" parameterType="java.util.Map" >
        INSERT INTO user (
        `id`,
        `login_name`,
        `real_name`,
        `password`
        )
        VALUES(
        #{user.id},
        #{user.loginName},
        #{user.realName},
        #{user.password}
        )
    </insert>

    <delete id="delete" parameterType="java.util.Map" >
        DELETE FROM user
        WHERE `id` = #{id}
    </delete>

    <update id="update" parameterType="java.util.Map" >
        UPDATE user
        <set>
            <if test="user.loginName != null and user.loginName != '' " >
                login_name = #{user.loginName},
            </if>
        </set>
        <set>
            <if test="user.realName != null and user.realName != '' " >
                real_name = #{user.realName},
            </if>
        </set>
        <set>
            <if test="user.password != null and user.password != '' " >
                password = #{user.password},
            </if>
        </set>
        WHERE `id` = #{user.id}
    </update>


    <select id="getAll" resultMap="User">
        SELECT
        <include refid="Base_Column_List" />
        FROM user
    </select>

    <select id="load" parameterType="java.util.Map" resultMap="User">
        SELECT <include refid="Base_Column_List" />
        FROM user
        WHERE `id` = #{id}
    </select>

    <select id="loadByLoginName" parameterType="java.util.Map" resultMap="User">
        SELECT <include refid="Base_Column_List" />
        FROM user
        WHERE `login_name` = #{name}
    </select>

    <select id="pageList" parameterType="java.util.Map" resultMap="User">
        SELECT <include refid="Base_Column_List" />
        FROM user
        LIMIT #{offset}, #{pagesize}
    </select>

    <select id="pageListCount" parameterType="java.util.Map" resultType="int">
        SELECT count(1)
        FROM user
    </select>

</mapper>
