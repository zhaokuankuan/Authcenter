<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iemp.auth.authcenter.dao.RoleBusinessDao">

    <resultMap id="RoleBusiness" type="com.iemp.auth.authcenter.domain.RoleBusiness" >
        <result column="id" property="id" />
        <result column="role_id" property="roleId" />
        <result column="class_pk" property="classPk" />
        <result column="class_name" property="className" />
    </resultMap>

    <sql id="Base_Column_List">
        `id`,
        `role_id`,
        `class_pk`,
        `class_name`
    </sql>

    <insert id="insert" parameterType="java.util.Map" >
        INSERT INTO role_business (
        `id`,
        `role_id`,
        `class_pk`,
        `class_name`
        )
        VALUES(
        #{roleBusiness.id},
        #{roleBusiness.roleId},
        #{roleBusiness.classPk},
        #{roleBusiness.className}
        )
    </insert>

    <delete id="delete" parameterType="java.util.Map" >
        DELETE FROM role_business
        WHERE `id` = #{id}
    </delete>

    <update id="update" parameterType="java.util.Map" >
        UPDATE role_business
        <set>
            <if test="roleBusiness.roleId != null and roleBusiness.roleId != '' " >
                role_id = #{roleBusiness.roleId},
            </if>
        </set>
        <set>
            <if test="roleBusiness.classPk != null and roleBusiness.classPk != '' " >
                class_pk = #{roleBusiness.classPk},
            </if>
        </set>
        <set>
            <if test="roleBusiness.className != null and roleBusiness.className != '' " >
                class_name = #{roleBusiness.className},
            </if>
        </set>
        WHERE `id` = #{roleBusiness.id}
    </update>


    <select id="getAll" resultMap="RoleBusiness">
        SELECT
        <include refid="Base_Column_List" />
        FROM role_business
    </select>

    <select id="load" parameterType="java.util.Map" resultMap="RoleBusiness">
        SELECT <include refid="Base_Column_List" />
        FROM role_business
        WHERE `id` = #{id}
    </select>

    <select id="pageList" parameterType="java.util.Map" resultMap="RoleBusiness">
        SELECT <include refid="Base_Column_List" />
        FROM role_business
        LIMIT #{offset}, #{pagesize}
    </select>

    <select id="pageListCount" parameterType="java.util.Map" resultType="int">
        SELECT count(1)
        FROM role_business
    </select>

</mapper>
